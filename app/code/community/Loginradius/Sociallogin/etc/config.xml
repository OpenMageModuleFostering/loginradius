<?xml version="1.0"?>
<config>    
    <modules>
        <Loginradius_Sociallogin>
            <version>1.2.0</version>
        </Loginradius_Sociallogin>
    </modules>
	<frontend>
	<layout>
            <updates>
                <sociallogin>
                    <file>sociallogin.xml</file>
                </sociallogin>
            </updates>
        </layout>
        <translate>
            <modules>
                <Loginradius_Sociallogin>
                    <files>
                        <default>Loginradius_Sociallogin.csv</default>
                    </files>
                </Loginradius_Sociallogin>
            </modules>
        </translate>
        <routers>
            <sociallogin>
                <use>standard</use>
                <args>
                    <module>Loginradius_Sociallogin</module>
                    <frontName>sociallogin</frontName>
                </args>
            </sociallogin>
        </routers>  
    </frontend>
	<admin>
        <routers>
			<sociallogin>
				<use>admin</use>
				<args>
					<module>Loginradius_Sociallogin</module>
					<frontName>sociallogin admin</frontName>
				</args>
			</sociallogin>
        </routers>
    </admin>
	<adminhtml>
	<acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <sociallogin_options>
                                            <title>Store Social login Module Section</title>
                                        </sociallogin_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Loginradius_Sociallogin>
							<title>Sociallogin Module</title>
							<sort_order>10</sort_order>
						</Loginradius_Sociallogin>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<sociallogin>
					<file>sociallogin.xml</file>
				</sociallogin>
			</updates>
		</layout>
    </adminhtml>   
	<global>
	<models>
            <sociallogin>
                <class>Loginradius_Sociallogin_Model</class>
                <resourceModel>sociallogin_mysql4</resourceModel>
            </sociallogin>
            <sociallogin_mysql4>
                <class>Loginradius_Sociallogin_Model_Mysql4</class>
                <entities>
                    <sociallogin>
                        <table>sociallogin</table>
                    </sociallogin>
                </entities>
            </sociallogin_mysql4>
        </models>
        <resources>
            <sociallogin_setup>
                <setup>
                    <module>Loginradius_Sociallogin</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sociallogin_setup>
            <sociallogin_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sociallogin_write>
            <sociallogin_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sociallogin_read>
        </resources>
		
	<blocks>
            <sociallogin>
                <class>Loginradius_Sociallogin_Block</class>
            </sociallogin>
    </blocks>
	<helpers>
            <sociallogin>
                <class>Loginradius_Sociallogin_Helper</class>
            </sociallogin>
    </helpers>
	</global>
</config>   
